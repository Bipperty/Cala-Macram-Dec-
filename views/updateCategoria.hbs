<div style="background-image: url(/images/Cala/Brands/fondoCompletoTrans.png); background-size: cover;background-repeat: no-repeat">
    <div class="row">
        <div class="col-5 container my-5 bg-light" style="padding: 25px; border-radius: 25px">
            <form method="post" action="/admin/categorias/update/{{categoria.id}}">
                <div class="form-group my-3">
                    <label for="nombre" class="form-label">Categoría:</label>
                    <input type="text" class="form-control" name="nombre" placeholder="Ingrese el nuevo nombre de la categoría" id="nombre" value="{{categoria.nombre}}">
                </div>
                                <div class="d-grid gap-2 col-12 mt-3 justify-content-center">
                    <button type="submit" class="btn btn-success px-5 fs-5" style="border-radius: 25px">Actualizar categoría <i class="fas fa-sync fa-lg" style="padding-left: 10px"></i></button>
                </div>
                <div class="d-grid gap-2 col-12 mt-3 justify-content-center">
                    <a href="/admin/categorias" class="btn btn-warning px-5" style="border-radius: 25px">Volver <i class="far fa-arrow-alt-circle-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>