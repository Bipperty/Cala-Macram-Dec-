<div style="background-image: url(/images/Cala/Brands/fondoCompletoTrans.png); background-size: cover;background-repeat: no-repeat">
    <div class="row">
        <div class="col-5 container my-5 bg-light" style="padding: 25px; border-radius: 25px">
            <form method="post" action="/admin/productos/create"  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="categorias" class="form-label">Categorías:</label>
                    <select name="id_categoria" class="form-control">   <!-- El name tiene que ser igual al nombre del item en la tabla -->
                        {{#each categorias}}
                            <option value="{{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group my-3">
                    <label for="nombre" class="form-label">Producto:</label>
                    <input type="text" class="form-control" name="nombre" placeholder="Ingrese el nombre del producto" id="nombre">
                </div>
                <div class="form-group my-3">
                    <label for="modelo" class="form-label">Modelo:</label>
                    <input type="text" class="form-control" name="modelo" placeholder="Ingrese el nombre del modelo" id="modelo">
                </div>
                 <div class="form-group mt-3">
                    <label for="dercripcion" class="form-label">Descripción:</label>
                    <textarea type="text" class="form-control" name="descripcion" placeholder="Ingrese la descripción del producto" id="descripcion"></textarea>
                </div>
                <div class="row justify-content-between">
                    <div class="col-5">
                        <div class="form-group my-3">
                            <label for="precio" class="form-label">Precio:</label>
                            <input type="number" class="form-control" name="precio" placeholder="Ingrese el precio del producto" id="precio">
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group my-3">
                            <label for="stock" class="form-label">Stock:</label>
                            <input type="number" class="form-control" name="stock" placeholder="Ingrese el stock del producto" id="stock">
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="imagen" class="form-label">Agregar imagen:</label>
                    <input type="file" class="form-control form-control-lg" name="imagen" placeholder="Ingrese la imagen del producto" id="imagen"></input>
                </div>
                <div class="d-grid gap-2 col-12 mt-3 justify-content-center">
                    <button type="submit" class="btn btn-success px-5 fs-5" style="border-radius: 25px">Agregar producto<i class="fas fa-plus fa-lg" style="padding-left: 10px"></i></button>
                </div>
                <div class="d-grid gap-2 col-12 mt-3 justify-content-center">
                    <a href="/admin/productos" class="btn btn-outline-secondary px-5" style="border-radius: 25px">Volver <i class="far fa-arrow-alt-circle-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>