<div style="background-image: url(/images/Cala/Brands/fondoCompletoTrans.png); background-size: cover;background-repeat: no-repeat">
    <div class="row">
        <div class="col-10 container-fluid mt-3">
            <div class="d-grid gap-2 mb-3 col-12 justify-content-center">
                <a href="/admin/productos/create" class="btn btn-outline-success px-5 fs-5" style="border-radius: 25px">Agregar producto<i class="fas fa-plus fa-lg" style="padding-left: 10px"></i></a>
            </div>
            <table class="table table-hover text-center" style="background:white; border-radius: 15px">
                <thead>
                    <tr class="align-middle fs-5">
                        <th>Categoría</th>
                        <th>ID</th>                        
                        <th>Nombre</th>
                        <th>Modelo</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>stock</th>
                        <th><i class="fas fa-portrait"></i></th>
                        <th><i class="fas fa-edit"></i></th>
                        <th><i class="fas fa-trash-alt"></i></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td  class="align-middle">{{nombreCategoria}}</td>
                        <td  class="align-middle">{{id}}</td>
                        <td  class="align-middle">{{nombre}}</td>
                        <td  class="align-middle">{{modelo}}</td>
                        <td class="text-start align-middle">{{descripcion}}</td>
                        <td  class="align-middle">${{precio}}</td>
                        <td  class="align-middle">{{stock}}</td>
                        <td class="align-middle"><img src="/images/{{uid}}" alt="{{nombre}}, {{modelo}}" style="height: 100px;"></td>
                        <td  class="align-middle"><a href="/admin/productos/update/{{id}}" class="btn btn-outline-primary btn-sm" style="border-radius: 25px">Editar</a></td>
                        <td  class="align-middle"><a href="/admin/productos/delete/{{id}}" class="btn btn-outline-danger btn-sm" style="border-radius: 25px">Eliminar</a></td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
                <div class="d-grid gap-2 mb-3 col-12 justify-content-center">
                <a href="/admin" class="btn btn-outline-secondary px-5 fs-5" style="border-radius: 25px">Volver <i class="far fa-arrow-alt-circle-left"></i></a>
            </div>
        </div>
    </div>
</div>