<div style="background-image: url(/images/Cala/Brands/fondoCompletoTrans.png); background-size: cover;background-repeat: no-repeat">
    <div class="row">
        <div class="col-10 container-fluid mt-3">
            <div class="d-grid gap-2 mb-3 col-12 justify-content-center">
                <a href="/admin/empleados/create" class="btn btn-outline-success px-5 fs-5" style="border-radius: 25px">Agregar empleado<i class="fas fa-user-plus" style="padding-left: 10px"></i></a>
            </div>
            <table class="table table-hover text-center" style="background:white; border-radius: 15px">
                <thead>
                    <tr class="align-middle fs-5">
                        <th>Nombre</th>
                        <th>Apellido</th>                        
                        <th><i class="fas fa-mobile"></i></th>
                        <th><i class="fas fa-street-view"></i></th>
                        <th><i class="fas fa-portrait"></i></th>
                        <th><i class="fas fa-edit"></i></th>
                        <th><i class="fas fa-trash-alt"></i></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each empleados}}
                    <tr class="align-middle">
                        <td class="align-middle">{{nombre}}</td>
                        <td class="align-middle">{{apellido}}</td>
                        <td class="align-middle">{{telefono}}</td>
                        <td class="align-middle">{{direccion}}</td>
                        <td class="align-middle"><img src="/images/{{uuid}}" alt="{{nombre}}, {{apellido}}" style="height: 100px;"></td>
                        <td class="align-middle"><a href="/admin/empleados/update/{{id}}" class="btn btn-outline-primary btn-sm" style="border-radius: 25px">Editar</a></td>
                        <td class="align-middle"><a href="/admin/empleados/delete/{{id}}" class="btn btn-outline-danger btn-sm" style="border-radius: 25px">Eliminar</a></td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
                <div class="d-grid gap-2 mb-3 col-12 justify-content-center">
                    <a href="/admin" class="btn btn-warning px-5 fs-5" style="border-radius: 25px">Volver <i class="far fa-arrow-alt-circle-left"></i></a>
            </div>
        </div>
    </div>
</div>